CONFIGURE_FILES = Makefile config.status config.cache config.h config.log

CC = @CC@
CPP = @CXX@
LD = ld
RM = rm

DEFS = @DEFS@
CFLAGS = $(DEFS) @CFLAGS@  -I ../kernel @PTHREAD_CFLAGS@

PRODUCTS = localfsd fstest readtest writetest

INSTALL = @INSTALL@

all: $(PRODUCTS)

localfsd : localfsd.c ../kernel/iumfs.h
	-$(CC) $(CFLAGS) localfsd.c -lsocket -lnsl -lpthread -o $@

fstest : fstest.cpp ../kernel/iumfs.h
	-$(CPP)  -g -O2 -Wall -DSOL11 -DSOL10  -I ../kernel -pthreads fstest.cpp -o fstest

writetest : writetest.c ../kernel/iumfs.h
	-$(CC) $(CFLAGS) writetest.c -o $@

readtest : readtest.c ../kernel/iumfs.h
	-$(CC) $(CFLAGS) readtest.c -o $@

clean:
	-$(RM) -f $(PRODUCTS) 

distclean:
	-$(RM) -f $(CONFIGURE_FILES)

test:
	./test.sh

install:
	-$(INSTALL) -d -m 0755 -o root -g bin /usr/local/bin
	-$(INSTALL) -m 0755 -o root -g bin fstest /usr/local/bin

uninstall:
	-$(RM) -rf /usr/local/bin/fstest
